<?xml version="1.0" encoding="UTF-8"?>
<AssignmentRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <assignmentRule>
        <fullName>Patient Lead %26 Referral Queue</fullName>
        <active>true</active>
        <ruleEntry>
            <assignedTo>Patient_Referral</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.RecordTypeId</field>
                <operation>equals</operation>
                <value>Patient Referral</value>
            </criteriaItems>
            <template>Patient_Referral_Email_Templates/New_Patient_Referral</template>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>Patient_Lead_Intake_Base</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Lead.RecordTypeId</field>
                <operation>equals</operation>
                <value>Patient</value>
            </criteriaItems>
            <template>Patient_Referral_Email_Templates/New_Patient_Referral</template>
        </ruleEntry>
    </assignmentRule>
</AssignmentRules>
